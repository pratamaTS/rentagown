<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="180dp"
        android:layout_height="320dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/im_content_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:riv_corner_radius="16dp"
            app:riv_mutate_background="true"
            app:riv_oval="false"
            android:contentDescription="@string/todo"
            tools:ignore="MissingConstraints" />

        <View
            android:id="@+id/scrim"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_scrim_layer"
            tools:ignore="MissingConstraints"/>

<!--        <ImageButton-->
<!--            android:id="@+id/btn_like_main"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:background="@drawable/ic_like_white_outlined"-->
<!--            android:layout_marginTop="16dp"-->
<!--            android:layout_marginEnd="16dp"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            app:layout_constraintTop_toTopOf="parent"-->
<!--            tools:ignore="MissingConstraints"-->
<!--            android:contentDescription="@string/todo"/>-->


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/tv_name_dress_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                tools:text="Gown Wedding" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_harga_dress_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp"
                    tools:text="Rp. 9.000.000" />

                <TextView
                    android:id="@+id/tv_discount_main"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/bg_button_rounded_gold"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="8sp"
                    tools:ignore="SmallSp"
                    tools:text="25%" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_price_old_dress_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/poppins_regular"
                android:foreground="@drawable/strikethrough_foreground_white"
                android:textColor="@color/colorWhite"
                android:textSize="12sp"
                tools:text="Rp. 8.000.000" />

        </LinearLayout>






    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>