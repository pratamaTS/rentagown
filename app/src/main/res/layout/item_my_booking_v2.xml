<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:layout_marginTop="@dimen/margin_sm"
    android:layout_marginBottom="@dimen/margin_sm"
    android:layout_marginStart="@dimen/margin_md"
    android:layout_marginEnd="@dimen/margin_md"
    app:cardElevation="4dp"
    app:contentPadding="@dimen/padding_md">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_product_image"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:contentDescription="@string/todo"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_corner_radius="8dp"
            app:riv_mutate_background="true"
            app:riv_oval="false" />

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_md"
            android:fontFamily="@font/poppins_semi_bold"
            android:maxWidth="169dp"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_product_image"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Selina Colourblock Camisole Dress" />


        <TextView
            android:id="@+id/tv_lbl_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_sm"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/price_booking"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/font_sm"
            app:layout_constraintStart_toStartOf="@id/tv_product_name"
            app:layout_constraintTop_toBottomOf="@id/tv_product_name" />

        <TextView
            android:id="@+id/tv_lbl_dp_paid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/dp_paid_booking"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/font_sm"
            app:layout_constraintStart_toStartOf="@id/tv_product_name"
            app:layout_constraintTop_toBottomOf="@id/tv_lbl_product_price" />

        <TextView
            android:id="@+id/tv_lbl_remaining_bill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/remaining_bills_booking"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/font_sm"
            app:layout_constraintStart_toStartOf="@id/tv_product_name"
            app:layout_constraintTop_toBottomOf="@id/tv_lbl_dp_paid" />

        <TextView
            android:id="@+id/tv_product_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_sm"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_medium"
            android:gravity="end"
            android:singleLine="true"
            android:textAlignment="textEnd"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/font_sm"
            app:layout_constraintBottom_toBottomOf="@id/tv_lbl_product_price"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_lbl_product_price"
            app:layout_constraintTop_toTopOf="@id/tv_lbl_product_price"
            tools:text="Rp. 5.000.000" />

        <TextView
            android:id="@+id/tv_dp_paid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_sm"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_medium"
            android:gravity="end"
            android:singleLine="true"
            android:textAlignment="textEnd"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/font_sm"
            app:layout_constraintBottom_toBottomOf="@id/tv_lbl_dp_paid"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_lbl_dp_paid"
            app:layout_constraintTop_toTopOf="@id/tv_lbl_dp_paid"
            tools:text="Rp. 2.000.000" />

        <TextView
            android:id="@+id/tv_remaining_bill"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_sm"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_medium"
            android:gravity="end"
            android:singleLine="true"
            android:textAlignment="textEnd"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/font_sm"
            app:layout_constraintBottom_toBottomOf="@id/tv_lbl_remaining_bill"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_lbl_remaining_bill"
            app:layout_constraintTop_toTopOf="@id/tv_lbl_remaining_bill"
            tools:text="Rp. 3.000.000" />

        <TextView
            android:id="@+id/tv_booking_start_end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_md"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/colorSoftBlack"
            android:textSize="@dimen/font_sm"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_product_image"
            tools:text="9 Sep 2020 - 10 Sep 2020" />

        <TextView
            android:id="@+id/tv_lbl_payment_deadline_my_booking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/payment_deadline"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/font_md"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_booking_start_end_date" />

        <TextView
            android:id="@+id/tv_countdown_timer_my_booking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semi_bold"
            android:textColor="@color/colorOrange"
            android:textSize="@dimen/font_lg"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_lbl_payment_deadline_my_booking"
            tools:text="11:59:00" />

        <TextView
            android:id="@+id/tv_booking_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_md"
            android:layout_marginBottom="@dimen/margin_md"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_regular"
            android:gravity="start"
            android:singleLine="true"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/font_sm"
            app:layout_constraintBottom_toBottomOf="@id/btn_fitting_size"
            app:layout_constraintEnd_toStartOf="@id/btn_fitting_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/btn_fitting_size"
            app:layout_constraintVertical_bias="1"
            tools:text="On-Progress" />

        <Button
            android:id="@+id/btn_fitting_size"
            style="@style/ButtonRoundedOutlinedGold2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_xsm"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/btn_fitting_size"
            android:textColor="@color/colorSecondary"
            android:textSize="@dimen/font_sm"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_booking_start_end_date" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>


