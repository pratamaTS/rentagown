<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_with_shadow"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/im_item_list_promo"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:riv_corner_radius_top_left="8dp"
            app:riv_corner_radius_top_right="8dp"
            android:scaleType="centerCrop"
            app:riv_mutate_background="true"
            app:riv_oval="false"
            android:contentDescription="@string/todo"
            android:src="@drawable/promo" />

        <RelativeLayout
            android:id="@+id/desc_item_list_promo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <ImageView
                android:id="@+id/im_list_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_discount"
                android:contentDescription="@string/todo"/>

            <TextView
                android:id="@+id/tv_title_item_list_promo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Promo"
                android:textSize="12sp"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/poppins_medium"
                android:layout_toEndOf="@+id/im_list_discount"
                android:layout_marginStart="5dp" />

            <TextView
                android:id="@+id/tv_desc_item_list_promo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title_item_list_promo"
                android:autoSizeMaxTextSize="12sp"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/colorGray"
                android:textSize="12sp"
                tools:ignore="SmallSp,UnusedAttribute"
                tools:text="The wait is over ðŸŽ‰
Massive sale! 90% off for third purchase on any dress (except wedding dress), Booking period until 15 September 2020. Rental period until December 2021." />

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>