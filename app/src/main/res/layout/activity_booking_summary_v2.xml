<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentInsetStart="0dp"
            app:contentInsetEnd="0dp"
            android:background="@color/colorWhite">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/btn_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_md"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/ic_back_black"
                    android:background="#00000000"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/appbar_confirm_payment"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/font_lg"
                    android:gravity="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:id="@+id/card_payment"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="@dimen/margin_md"
        android:background="@drawable/bg_shadow"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/app_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/layout_header_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/payment_deadline"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/colorDarkGrey"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="13dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:id="@+id/tv_payment_due_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Tuesday, 08 Sep 2020"
                        android:textSize="@dimen/font_sm"
                        android:textColor="@color/colorBlack"
                        android:fontFamily="@font/poppins_semi_bold"/>

                    <TextView
                        android:id="@+id/tv_payment_due_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        tools:text="24:00 WIB"
                        android:textSize="@dimen/font_sm"
                        android:textColor="@color/colorBlack"
                        android:fontFamily="@font/poppins_semi_bold"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom|end">

                <TextView
                    android:id="@+id/tv_countdown_timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="23:59:00"
                    android:visibility="invisible"
                    android:textSize="14sp"
                    android:textColor="@color/colorOrange"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:layout_marginEnd="16dp" />

            </LinearLayout>


        </LinearLayout>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/margin_md"
            android:layout_marginTop="@dimen/margin_md"
            android:layout_marginEnd="@dimen/margin_md"
            android:background="@color/colorSoftGrey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_header_payment" />

        <LinearLayout
            android:id="@+id/layout_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/line"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <ImageView
                    android:id="@+id/iv_payment_method_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:src="@drawable/logo_bca"
                    android:layout_marginStart="@dimen/margin_md"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_account_dest_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/account_number_confirm"
                    android:textSize="@dimen/font_xs"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginStart="@dimen/margin_md"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/tv_account_number_confirm_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="5496523645"
                    android:textSize="@dimen/font_sm"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginStart="@dimen/margin_md"/>

                <TextView
                    android:id="@+id/tv_account_name_confirm_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="@string/atas_nama"
                    android:textSize="@dimen/font_sm"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginStart="@dimen/margin_md"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center|end">

                <Button
                    style="@style/ButtonInvoice"
                    android:id="@+id/btn_invoice"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_invoice"
                    android:textSize="@dimen/font_sm"
                    android:visibility="invisible"
                    android:textColor="@color/colorSecondary"
                    android:layout_marginEnd="@dimen/margin_md"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/layout_account"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total_price_confirm"
                    android:textSize="@dimen/font_md"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginStart="@dimen/margin_md"/>

                <TextView
                    android:id="@+id/tv_total_price_confirm_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Rp. 500.050"
                    android:textSize="18sp"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:layout_marginStart="@dimen/margin_md"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/last_2_digit_is_unique_code_for_bank_transfer"
                    android:textSize="8sp"
                    android:textColor="@color/colorDarkGrey"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginStart="16dp"
                    tools:ignore="SmallSp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical|end">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/payment_method_confirm"
                    android:textSize="@dimen/font_md"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginEnd="@dimen/margin_md"/>

                <TextView
                    android:id="@+id/tv_payment_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Deposit  Booking"
                    android:textSize="16sp"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:layout_marginEnd="@dimen/margin_md"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_bottom_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_confirm_payment"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:fontFamily="@font/poppins_semi_bold"
            android:text="@string/btn_confirmation"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="@dimen/margin_md"
            android:layout_marginStart="@dimen/margin_md"
            android:layout_marginEnd="@dimen/margin_md"
            android:layout_marginBottom="@dimen/margin_md"
            app:strokeWidth="1dp"
            app:strokeColor="@color/colorPrimary"
            app:cornerRadius="28dp"
            android:textSize="16sp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cancel"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="@dimen/margin_md"
            android:layout_marginEnd="@dimen/margin_md"
            android:layout_marginTop="@dimen/margin_xsm"
            android:layout_marginBottom="@dimen/margin_md"
            app:backgroundTint="@null"
            android:background="@drawable/bg_button_rounded_gold"
            android:fontFamily="@font/poppins_semi_bold"
            android:text="@string/btn_cancel"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:visibility="gone"
            app:cornerRadius="28dp"
            android:textSize="16sp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>