<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp">

    <TextView
        android:id="@+id/tv_tgl_transaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:fontFamily="@font/poppins_semi_bold"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        tools:text="08 Sep 2020"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@drawable/bg_shadow"
        app:layout_constraintTop_toBottomOf="@+id/tv_tgl_transaction"
        tools:ignore="MissingConstraints">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/im_product_booking"
            android:layout_width="90dp"
            android:layout_height="127dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="22dp"
            tools:src="@drawable/prewedding_1"
            android:contentDescription="@string/todo"
            android:scaleType="centerCrop"
            app:riv_corner_radius="8dp"
            app:riv_mutate_background="true"
            app:riv_oval="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_name_dress_booking"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/poppins_semi_bold"
            android:maxWidth="169dp"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/im_product_booking"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Selina Colourblock Camisole Dress" />


        <TextView
            android:id="@+id/tv_title_price_booking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/price_booking"
            android:textColor="@color/colorBlack"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/im_product_booking"
            app:layout_constraintTop_toBottomOf="@+id/tv_name_dress_booking" />

        <TextView
            android:id="@+id/tv_title_dp_paid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/dp_paid_booking"
            android:textColor="@color/colorBlack"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/im_product_booking"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_price_booking" />

        <TextView
            android:id="@+id/tv_title_remaining_bils"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/remaining_bills_booking"
            android:textColor="@color/colorBlack"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/im_product_booking"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_dp_paid" />

        <TextView
            android:id="@+id/tv_price_booking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/poppins_medium"
            android:textAlignment="textEnd"
            android:textColor="@color/colorBlack"
            android:textSize="12sp"
            tools:text="Rp. 5.000.000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_name_dress_booking" />

        <TextView
            android:id="@+id/tv_dp_paid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/poppins_medium"
            android:textAlignment="textEnd"
            android:textColor="@color/colorBlack"
            android:textSize="12sp"
            tools:text="Rp. 2.000.000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_price_booking" />

        <TextView
            android:id="@+id/tv_remaining_bils"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/poppins_medium"
            android:textAlignment="textEnd"
            android:textColor="@color/colorBlack"
            android:textSize="12sp"
            tools:text="Rp. 3.000.000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_dp_paid" />

        <TextView
            android:id="@+id/tv_start_date_booking_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/colorSoftBlack"
            android:textSize="12sp"
            tools:text="9 Sep 2020"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/im_product_booking" />

        <TextView
            android:id="@+id/tv_end_date_booking_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/colorSoftBlack"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/tv_start_date_booking_product"
            app:layout_constraintTop_toBottomOf="@+id/im_product_booking"
            tools:text="16 Sep 2020" />

        <TextView
            android:id="@+id/tv_status_booking"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/poppins_regular"
            android:textAlignment="textEnd"
            android:textColor="@color/colorBlack"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="On-Progress" />

        <Button
            android:id="@+id/btn_fitting_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            style="@style/ButtonRoundedOutlinedGold2"
            android:text="@string/btn_fitting_size"
            android:textColor="@color/colorSecondary"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_remaining_bils" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>