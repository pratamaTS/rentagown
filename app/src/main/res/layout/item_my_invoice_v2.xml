<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginStart="@dimen/margin_md"
    android:layout_marginEnd="@dimen/margin_xsm"
    android:layout_marginTop="@dimen/margin_xsm"
    android:layout_marginBottom="@dimen/margin_md"
    app:contentPaddingTop="@dimen/padding_sm"
    app:contentPaddingBottom="@dimen/padding_sm"
    app:contentPaddingLeft="12dp"
    app:contentPaddingRight="12dp"
    app:cardBackgroundColor="@color/colorGrey"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:baselineAligned="false">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/todo"
            android:src="@drawable/ic_bill_gold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_invoice"
            android:layout_width="match_parent"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/colorSoftGray"
            android:textSize="12sp"
            tools:text="INV-08092020-070001" />

        <TextView
            android:id="@+id/tv_invoice_amount"
            android:layout_width="match_parent"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semi_bold"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            tools:text="Rp. 2.000.000" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:gravity="center_vertical|end"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_invoice_payment_method"
            android:layout_width="match_parent"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="end"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/colorBlack"
            android:textSize="12sp"
            tools:text="Transfer Manual" />

        <TextView
            android:id="@+id/tv_time_invoice_history"
            android:layout_width="match_parent"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="end"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/colorDarkGrey"
            android:textSize="12sp"
            android:visibility="gone"
            tools:text="10:15" />

        <TextView
            android:id="@+id/tv_invoice_date"
            android:layout_width="match_parent"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="end"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/colorDarkGrey"
            android:textSize="12sp"
            tools:text="08 Sep 2020" />

    </LinearLayout>

</LinearLayout>
</com.google.android.material.card.MaterialCardView>
